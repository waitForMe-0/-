.goosDetail swiper {
  height: 700rpx;
}
.goosDetail swiper image {
  height: 100%;
  width: 100%;
}
.goosDetail .box1 {
  padding: 0 30rpx 0 30rpx;
  border-bottom: 10rpx solid #eee;
}
.goosDetail .box1 .price {
  font-size: 50rpx;
  line-height: 80rpx;
}
.goosDetail .box1 .price text {
  color: #b50e03;
}
.goosDetail .box1 .price text:nth-child(2) {
  margin-left: 40rpx;
  font-size: 40rpx;
  color: #ccc;
  text-decoration: line-through;
}
.goosDetail .box1 .goodsName {
  font-size: 32rpx;
  line-height: 60rpx;
}
.goosDetail .box2 {
  border-bottom: 10rpx solid #eee;
}
.goosDetail .box2 view {
  line-height: 70rpx;
  padding: 0 30rpx 0 30rpx;
  font-size: 33rpx;
}
.goosDetail .box3 {
  padding: 0 30rpx 0 30rpx;
}
.goosDetail .box3 view:nth-child(1) {
  border-bottom: 4rpx solid #eee;
  line-height: 80rpx;
}
.goosDetail .box3 .content {
  font-size: 34rpx;
  line-height: 60rpx;
}
.goosDetail .goods-nav {
  width: 750rpx;
  position: fixed;
  bottom: 0px;
}

